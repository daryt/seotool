<div class='container'>
	<div class='row'>

		<h1>Select your industry</h1>

		<%= form_for(@template, html: {class: 'form-horizontal'}) do |f| %>

		<div class="form-group">
			<%= f.label :industry, class: "col-sm-2 control-label" %>
			<div class="col-sm-6">
				<%= f.select :industry_id, Industry.all.collect {|p| [p.name, p.id]}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
	        <%= f.label :template_name, class: "col-sm-2 control-label" %>
	        <div class="col-sm-6">
	          <%= f.text_field :name, class: "form-control", required: true %>
	        </div>
	    </div>

		<div class="actions">
		  	<%= f.submit "Select",class:"btn btn-primary" %>
		</div>

		<% end %>

	</div>

	<div class='row'>

		<h1>Select an in-process template</h1>

		<%= form_tag("/show_overview/", method: "post", class: "") do %>

		<div class="form-group">
			<%= select_tag(:id, options_for_select(@templates.collect {|p| [p.name, p.id]}, class: "col-sm-2 control-label")) %>
		</div>

		<div class="actions">
			<%= submit_tag("Select", class:"btn btn-primary") %>
		</div>

		<% end %>

	</div>

</div>