<div class='container'>
	<div class='row'>

		<h1>Select Keywords Per Topic</h1>

		<%= form_tag("/update_keywords/", method: "post", class: "") do %>

			<% @pages.each do |page| %>

			<div>
				<h1><%= Topic.find(page.topic_id).name %></h1>

				<% for i in 1..3 %>
				<div class="form-group">
					<%= select_tag(page.topic_id.to_s + '_' + i.to_s + '_keyword', options_for_select(Topic.find(page.topic_id).keywords.collect {|p| [p.keyword, p.id]}, class: "col-sm-2 control-label")) %>
				</div>
				<% end %>

			</div>
			<% end %>

			<%= submit_tag("Save and Continue", class:"btn btn-primary") %>

		<% end %>

	</div>
</div>